@page
@model WebApplication3.Pages.LoginModel
@{
}

<h1>Login</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountViewModel.Email" class="control-label"></label>
                <input asp-for="AccountViewModel.Email" class="form-control" />
                <span asp-validation-for="AccountViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountViewModel.Password" class="control-label"></label>
                <input asp-for="AccountViewModel.Password" class="form-control" />
                <span asp-validation-for="AccountViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        @if (Model.Message != null)
        {
            <p>@Model.Message</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}