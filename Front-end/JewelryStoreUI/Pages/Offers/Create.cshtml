@page
@model JewelryStoreUI.Pages.Offers.CreateModel
@{
}


<h2>Create Offer</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="CreateOfferRequest.OfferPercent" class="control-label"></label>
        <input asp-for="CreateOfferRequest.OfferPercent" class="form-control" />
        <span asp-validation-for="CreateOfferRequest.OfferPercent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreateOfferRequest.Constraints" class="control-label"></label>
        <input asp-for="CreateOfferRequest.Constraints" class="form-control" />
        <span asp-validation-for="CreateOfferRequest.Constraints" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
