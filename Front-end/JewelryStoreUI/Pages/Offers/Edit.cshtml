@page "{id:guid}"
@model JewelryStoreUI.Pages.Offers.EditModel
@{
}


<h2>Edit Offer</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UpdateOfferRequest.OfferPercent" class="control-label"></label>
        <input asp-for="UpdateOfferRequest.OfferPercent" class="form-control" />
        <span asp-validation-for="UpdateOfferRequest.OfferPercent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UpdateOfferRequest.Constraints" class="control-label"></label>
        <input asp-for="UpdateOfferRequest.Constraints" class="form-control" />
        <span asp-validation-for="UpdateOfferRequest.Constraints" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
