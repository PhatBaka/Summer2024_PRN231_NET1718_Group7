@page
@model JewelryStoreUI.Pages.Jewleries.CreateModel
@{
    Layout = "_ManagerLayout";
    
}

<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: middle;
        border-top: 1px solid #ddd
    }
</style>
    
<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix d-flex align-items-center">
                        <h4 class="mgt">NEW GEM</h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a asp-asp-page="Gems/Index">Home</a> / Gem</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="center_shop_tl clearfix">
                    <table class="table table-striped table-center">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Weight</th>
                                <th>Clarity</th>
                                <th>Color</th>
                                <th>Purity</th>
                                <th>Sharp</th>
                                <th>Sell Price</th>
                                <th>Buy Price</th>
                                <th>Created Date</th>
                                <th>Image</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gem in Model.GemData)
                            {
                                <tr class="d-flex justify-content-center">
                                    <td>@gem.Name</td>
                                    <td>@gem.Weight</td>
                                    <td>@gem.Clarity</td>
                                    <td>@gem.Color</td>
                                    <td>@gem.Purity</td>
                                    <td>@gem.Sharp</td>
                                    <td>@gem.SellPrice</td>
                                    <td>@gem.BuyPrice</td>
                                    <td>@gem.CreatedDate</td>
                                    <td >
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(gem.MaterialImageData)" alt="@gem.Name" style="max-width: 100px; max-height: 100px;" />
                                    </td>
                                    <td>
                                    <td>
                                        <a class="button" asp-page="/Gems/Detail" asp-route-id="@gem.MaterialId">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <nav aria-label="Page navigation" class="d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
                        </li>
                        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" style="background-color:#dfb858" asp-page="./Index" asp-route-currentPage="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Math.Ceiling((double)Model.TotalCount / Model.PageSize) ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>
                </nav>

            </div>

        </div>
    </div>
</section>
