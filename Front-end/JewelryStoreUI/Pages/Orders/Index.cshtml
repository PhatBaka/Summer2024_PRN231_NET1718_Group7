@page
@model JewelryStoreUI.Pages.Orders.IndexModel
@{
    Layout = "_StaffLayout";
}

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix">
                        <h4 class="mgt">ORDER</h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a href="#">Order</a> / Index</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Phoner Number</th>
                            <th>Total Price</th>
                            <th>Discount Price</th>
                            <th>Final Price</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.orderId</td>
                                <td>@((DateTime)order.orderDate)</td>
                                <td>@order.phoneNumber</td>
                                <td>@(order.totalPrice ?? "N/A")</td>
                                <td>@(order.discountPrice ?? "N/A")</td>
                                <td>@(order.finalPrice ?? "N/A")</td>
                                <td>@order.status</td>
                                <td>
                                    <a asp-page="./Detail" asp-route-orderId="@order.orderId" class="btn btn-primary">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>
