@page
@model JewelryStoreUI.Pages.Orders.DetailModel
@{
    Layout = "_StaffLayout";
}

<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: middle;
        border-top: 1px solid #ddd
    }
</style>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix d-flex align-items-center">
                        <h4 class="mgt"><a class="button" asp-page="OrderScreen">CREATE</a></h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a asp-asp-page="Orders/Index">Home</a> / Orders</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="center_shop_tl clearfix">
                    <table class="table table-striped table-center">
                        <thead>
                            <tr>
                                <th>Jewelry</th>
                                <th>Discount Value</th>                        
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                                <th>Discount Price</th>
                                <th>Final Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Order.OrderDetails)
                            {
                                <tr class="d-flex justify-content-center">
                                    <td>@order.JewelryName</td>
                                    <td>@order.DiscountValue</td>
                                    <td>@order.Quantity</td>
                                    <td>@order.UnitPrice</td>
                                    <td>@order.TotalPrice</td>
                                    <td>@order.DiscountPrice</td>
                                    <td>@order.FinalPrice</td>
                                    <td>
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(order.JewelryImageData)" alt="@order.JewelryName" style="max-width: 100px; max-height: 100px;" />
                                    </td>
                                    <td>
                                    <td>
                                        <a class="button" asp-page="/Orders/Detail" asp-route-id="@order.JewelryId">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>
